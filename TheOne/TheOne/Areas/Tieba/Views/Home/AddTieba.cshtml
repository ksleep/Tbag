@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TheOne.Model.Blogs.ViewModel.ReplyModel
<div class="layui-main-odd layui-container layui-outBg">
    <div class="layui-contentall">
        <div class="layui-content-title">
            <img src="~/images/Page/formNew.png" />卡口详细信息
        </div>
        <form class="layui-form" asp-antiforgery="true" id="myForm" autocomplete="off">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label" style="width:100px;font-size:16px;"><span style="border-left:5px solid #38acd0"></span>&nbsp; 基本信息：</label>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-inline">
                        <input asp-for="id" type="text" placeholder="请输入名称" class="layui-input">
                        <div>
                            <div class="valid-tips"><span class="valid-tips-span" asp-validation-for="id"></span></div>
                        </div>
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">区域名称</label>
                    <div class="layui-input-inline">
                        <input asp-for="回复内容" type="text" placeholder="请输入名称" class="layui-input">
                        <div>
                            <div class="valid-tips"><span class="valid-tips-span" asp-validation-for="回复内容"></span></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="layui-form-item layui-content-btn">
                <div class="layui-input-block">
                    <button type="submit" id="btnSave" class="layui-btn">确认保存</button>
                    <button type="button" onclick="CloseLayer()" class="layui-btn layui-btn-primary">关闭</button>
                </div>
            </div>
        </form>
    </div>
</div>
